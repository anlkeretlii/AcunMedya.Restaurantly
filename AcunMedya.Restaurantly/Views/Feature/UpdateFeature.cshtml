@model AcunMedya.Restaurantly.Entities.Feature
@{
    ViewBag.Title = "Update Feature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Özellik Güncelle</h4>
                    @using (Html.BeginForm("UpdateFeature", "Feature", FormMethod.Post))
                    {
                        @Html.HiddenFor(x => x.FeatureId)
                        <div class="form-group">
                            <label>İkon (Font Awesome Class)</label>
                            @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Başlık</label>
                            @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>Açıklama</label>
                            @Html.TextAreaFor(x => x.SubTitle, new { @class = "form-control" })
                        </div>
                        <button type="submit" class="btn btn-primary">Güncelle</button>
                        <a href="/Feature/Index" class="btn btn-outline-secondary">İptal</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div> 