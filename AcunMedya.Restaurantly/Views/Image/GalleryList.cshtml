@model List<AcunMedya.Restaurantly.Entities.Images>
@{
    ViewBag.Title = "Galeri";
    Layout = "~/Views/AdminLayout/Index.cshtml";

}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Galeri</h4>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered zero-configuration">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Görsel</th>
                                    <th>Başlık</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ImagesId</td>
                                        <td>
                                            <img src="@item.ImageUrl" alt="@item.Title" style="width:150px; height:100px; object-fit:cover;" />
                                        </td>
                                        <td>@item.Title</td>
                                        <td>
                                            <a href="@Url.Action("GalleryEdit", "Image", new { id = item.ImagesId })" class="btn btn-warning">Düzenle</a>
                                            <a href="@Url.Action("GalleryDelete", "Image", new { id = item.ImagesId })" class="btn btn-danger">Sil</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Image/GalleryCreate" class="btn btn-primary">Yeni Görsel Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
