@model List<AcunMedya.Restaurantly.Entities.Product>
@{
    ViewBag.Title = "Product Management";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Urunler</h4>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered zero-configuration">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Gorsel</th>
                                    <th>Kategori</th>
                                    <th>Urun Adi</th>
                                    <th>Aciklama</th>
                                    <th>Fiyat</th>
                                    <th>Durum</th>
                                   
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ProductId</td>
                                        <td>
                                            <img src="@item.ImageUrl" alt="@item.Name" style="width:100px; height:100px;" />
                                        </td>
                                        <td>@item.Category.Name</td>
                                        <td>@item.Name</td>
                                        <td>@item.Description</td>
                                        <td>@item.Price ₺</td>
                                        
                                        <td>
                                            <a href="/Product/DeleteProduct/@item.ProductId" class="btn btn-danger" onclick="return confirm('Silmek istediğinize emin misiniz?')">
                                                <i class="fa fa-trash"></i>
                                            </a>
                                            <a href="/Product/UpdateProduct/@item.ProductId" class="btn btn-success">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                     
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Product/AddProduct" class="btn btn-primary">Yeni Urun Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 