@model List<AcunMedya.Restaurantly.Entities.Chef>
@{
    ViewBag.Title = "Şef Yönetimi";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4 class="card-title mb-0">Şeflerimiz</h4>
                        <a href="@Url.Action("AddChef", "Chef")" class="btn btn-primary">
                            <i class="fa fa-plus"></i> Yeni Şef Ekle
                        </a>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered zero-configuration">
                            <thead>
                                <tr>
                                    <th style="width: 50px">#</th>
                                    <th style="width: 120px">Görsel</th>
                                    <th>Ad Soyad</th>
                                    <th>Unvan</th>
                                    <th>Sosyal Medya</th>
                                    <th style="width: 150px">İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ChefId</td>
                                        <td>
                                            <img src="@item.ImageUrl" alt="@item.Name" style="width:100px; height:100px; border-radius:50%; object-fit:cover;" />
                                        </td>
                                        <td>@item.Name</td>
                                        <td>@item.Title</td>
                                        <td>
                                            <div class="social-links">
                                                @if (!string.IsNullOrEmpty(item.TwitterUrl))
                                                {
                                                    <a href="@item.TwitterUrl" target="_blank" class="btn btn-outline-info btn-sm">
                                                        <i class="fa fa-twitter"></i>
                                                    </a>
                                                }
                                                @if (!string.IsNullOrEmpty(item.FacebookUrl))
                                                {
                                                    <a href="@item.FacebookUrl" target="_blank" class="btn btn-outline-primary btn-sm">
                                                        <i class="fa fa-facebook"></i>
                                                    </a>
                                                }
                                                @if (!string.IsNullOrEmpty(item.InstagramUrl))
                                                {
                                                    <a href="@item.InstagramUrl" target="_blank" class="btn btn-outline-danger btn-sm">
                                                        <i class="fa fa-instagram"></i>
                                                    </a>
                                                }
                                                @if (!string.IsNullOrEmpty(item.LinkedInUrl))
                                                {
                                                    <a href="@item.LinkedInUrl" target="_blank" class="btn btn-outline-primary btn-sm">
                                                        <i class="fa fa-linkedin"></i>
                                                    </a>
                                                }
                                            </div>
                                        </td>
                                        <td>
                                            <a href="@Url.Action("UpdateChef", "Chef", new { id = item.ChefId })" class="btn btn-warning btn-sm" title="Düzenle">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                            <a href="@Url.Action("DeleteChef", "Chef", new { id = item.ChefId })" class="btn btn-danger btn-sm" 
                                               onclick="return confirm('[@item.Name] isimli şefi silmek istediğinize emin misiniz?')" title="Sil">
                                                <i class="fa fa-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .social-links {
        display: flex;
        gap: 5px;
    }
    .social-links .btn {
        padding: 5px 10px;
    }
</style>

