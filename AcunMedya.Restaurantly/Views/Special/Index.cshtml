@model List<AcunMedya.Restaurantly.Entities.Special>
@{
    ViewBag.Title = "Özel Menüler";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Ozel Menuler</h4>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered zero-configuration">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Baslik</th>
                                    <th>Aciklama</th>
                                    <th>Fiyat</th>
                                    <th>Gorsel</th>
                                    <th>Islemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.SpecialId<td>
                                        <td>@item.Title</td>
                                        <td>@item.ShortDescription</td>
                                        <td>@item.FullDescription</td>
                                        <td>@item.Price ₺</td>
                                        <td>
                                            <img src="@item.ImageUrl" alt="@item.Title" style="width:100px; height:100px;" />
                                        </td>
                                        <td>
                                            <a href="/Special/DeleteSpecial/@item.SpecialId" class="btn btn-danger" onclick="return confirm('Silmek istediğinize emin misiniz?')">
                                                <i class="fa fa-trash"></i>
                                            </a>
                                            <a href="/Special/UpdateSpecial/@item.SpecialId" class="btn btn-success">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Special/AddSpecial" class="btn btn-primary">Yeni Ozel Menu Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 