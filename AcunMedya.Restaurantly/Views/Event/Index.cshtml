@model List<AcunMedya.Restaurantly.Entities.Event>
@{
    ViewBag.Title = "Event Management";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Etkinlikler</h4>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered zero-configuration">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Görsel</th>
                                    <th>Başlık</th>
                                    <th>Fiyat</th>
                                    <th>Açıklama</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.EventId</td>
                                        <td>
                                            <img src="@item.ImageUrl" alt="@item.Title" style="width:100px; height:100px; object-fit:cover;" />
                                        </td>
                                        <td>@item.Title</td>
                                        <td>@item.Price ₺</td>
                                        <td>@(item.Description.Length > 100 ? item.Description.Substring(0, 100) + "..." : item.Description)</td>
                                        <td>
                                            <a href="/Event/DeleteEvent/@item.EventId" class="btn btn-danger" onclick="return confirm('Silmek istediğinize emin misiniz?')">
                                                <i class="fa fa-trash"></i>
                                            </a>
                                            <a href="/Event/UpdateEvent/@item.EventId" class="btn btn-success">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Event/AddEvent" class="btn btn-primary">Yeni Etkinlik Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 