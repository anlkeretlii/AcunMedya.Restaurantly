@model List<AcunMedya.Restaurantly.Entities.Service>
@{
    ViewBag.Title = "Hizmetler";
       Layout = "~/Views/AdminLayout/Index.cshtml";

}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Hizmetlerimiz</h4>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered zero-configuration">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>İkon</th>
                                    <th>Başlık</th>
                                    <th>Açıklama</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ServiceId</td>
                                        <!-- <td><i class="et item.image"></i></td> -->
                                        <td>@item.Title</td>
                                        <td>@item.Description</td>
                                        <td>
                                            <a href="/Service/DeleteService/@item.ServiceId" class="btn btn-danger" onclick="return confirm('Silmek istediğinize emin misiniz?')">
                                                <i class="fa fa-trash"></i>
                                            </a>
                                            <a href="/Service/UpdateService/@item.ServiceId" class="btn btn-success">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Service/AddService" class="btn btn-primary">Yeni Hizmet Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 